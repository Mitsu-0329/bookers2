<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100,100) %>
          <% end %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th>mitsu3</th>
              </tr>
              <tr>
                <th>introduction</th>
                <th></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: book do |f| %>

          <div class="form-group">
            <div class="field_with_errors">
            
              <h4>Title</h4>
              <%= f.text_field :title %>
            
            </div>
          </div>
          <div class="form-group">
            <div class="field_with_errors">
            
              <h4>Opinion</h4>
              <%= f.text_area :body %>
            
            </div>
          </div>
          <div class="form-group">
            <div class="field_with_errors">
              
                <%= f.submit 'Cleate Book' %>
              
            </div>
          </div>
          <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            </thead>
          <tbody>
            <tr>
              <td>
                


              </td>
              <td>



              </td>
              <td>自分への思いやり</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

