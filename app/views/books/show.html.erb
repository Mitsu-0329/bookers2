<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'sidebar', books: @books, user: @user , book: @book %>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book_show.user.id) do %>
                  <%= image_tag @book_show.user.get_profile_image(100,100) %>
                  <br>
                  <%= @book_show.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book_show.id) do %>
                  <%= @book_show.title %>
                <% end %>
              </td>
              <td>
                <%= @book_show.body %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>