<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>

        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>


         
         
        <%= form_with model: @book do |f| %>

          <label>Title</label><br>
          <%= f.text_field :title, class: "form-control book_title", id: "book_title" %>
          <br>
          <label>Opinion</label><br>
          <%= f.text_area :body, class: "form-control book_body", id: "book_body" %>
          <br>
          <%= f.submit 'Update Book' , class:"btn btn-success" %>

        <% end %>
        </div>
          <%= link_to 'Show', book_path(@book.id) %><%= " | " %>
          <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</main>

